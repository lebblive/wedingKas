<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTableFragment">

    <EditText
        android:id="@+id/etTableName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="no"
        android:hint="nom de la table"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/etNumberPlace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/etNumberPlace"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:inputType="number"
        android:hint="place assise"
        app:layout_constraintBottom_toTopOf="@+id/etGuestFirstNameInTable"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etTableName"
        android:autofillHints="no"
        tools:targetApi="o"/>

    <EditText
        android:id="@+id/etGuestFirstNameInTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="no"
        android:hint="@string/enter_first_name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnAddaT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/etGuestNameInTable"
        app:layout_constraintTop_toBottomOf="@+id/etNumberPlace"
        tools:targetApi="o" />

    <EditText
        android:id="@+id/etGuestNameInTable"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:autofillHints="no"
        android:hint="@string/enter_family_name"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnAddaT"
        app:layout_constraintEnd_toStartOf="@+id/etGuestFirstNameInTable"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNumberPlace"
        tools:targetApi="o" />

    <Button
        android:id="@+id/btnAddaT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/ic_add2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/rvGuestNameInThisTable"
        app:layout_constraintTop_toBottomOf="@+id/etGuestFirstNameInTable" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGuestNameInThisTable"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveAT"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddaT" />

    <Button
        android:id="@+id/btnSaveAT"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/ic_save2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvGuestNameInThisTable" />

</androidx.constraintlayout.widget.ConstraintLayout>